#!/bin/bash

if [ ! -d /usr/local/Homebrew ]; then
  echo "Downloading Homebrew. This may take a while ☕️"
  /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

if [ ! -d ~/.rbenv ]; then
  echo "Installing rbenv. This may take a while ☕️"
  brew install rbenv
  rbenv init
  rbenv install 2.5.1
  rbenv global 2.5.1
fi

if [ ! -d ~/.nvm ]; then
  echo "Installing nvm. This may take a while ☕️"
  brew install nvm
  mkdir ~/.nvm
  nvm install 8
  nvm alias default 8
fi



if [ ! -f ~/.vim/autoload/plug.vim ]; then
  echo "Downloading vim plugin manager (Plug). This may take a while ☕️"
  curl -fLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
fi
if [ ! -f ~/Library/Fonts/Source\ Code\ Pro\ Black\ for\ Powerline.otf ]; then
  echo "Downloading Powerline Fonts"
  git clone https://github.com/powerline/fonts.git --depth=1
  cd fonts
  ./install.sh
  cd ..
  rm -rf fonts
  echo "Fonts installation finished!"
fi

cp ./.vimrcplugins ~/.vimrc
cp ./.vimrcplugins ~/.vimrcplugins

vim +PlugInstall +qa

if [ ! -d ~/.oh-my-zsh ]; then
  echo "Downloading Oh My ZSH ☕️"
  sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"
fi


if [ ! -d ~/.bin ]; then
  echo "Creating ~.bin directory"
  mkdir ~/.bin
fi

if ! [ -x "$(command -v tmux)" ]; then
  brew install tmux
fi

if ! [ -x "$(command -v tmuxinator)" ]; then
  gem install tmuxinator
fi

if [ ! -f ~/.bin/tmuxinator.zsh ]; then
  echo "Downloading tmuxinator auto complete"
  curl https://raw.githubusercontent.com/tmuxinator/tmuxinator/master/completion/tmuxinator.zsh --output ~/.bin/tmuxinator.zsh
fi

echo "Copying dotfiles"
cp ./.bash_profile ~/bash_profile
cp ./.profile ~/.profile
cp ./.zshrc ~/.zshrc
cp ./.vimrc ~/.vimrc
cp ./.gitignore_global ~/.gitignore_global
node replacer.js ./.gitconfig > ~/.gitconfig

source ~/.zshrc

echo "All done 🍺"

